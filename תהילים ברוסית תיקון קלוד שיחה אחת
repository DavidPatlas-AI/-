          }
        },
        
        // עברית
        he: {
          // כותרות ראשיות
          siteTitle: 'תיקון השם',
          homeTitle: 'תיקון השם - תהילים ותפילות',
          mainSubtitle: 'קריאת תהילים ותפילות בשלוש שפות לעילוי נשמה',
          
          // תפריט ניווט
          nav: {
            home: 'ראשי',
