              <button onClick={() => setIsAddFormVisible(false)}>âœ•</button>
            </div>
            <div className="p-4">
              <div className="mb-3">
                <label className="block mb-1 font-medium">Ğ˜Ğ¼Ñ Ğ½Ğ° Ğ¸Ğ²Ñ€Ğ¸Ñ‚Ğµ</label>
                <input type="text" className="w-full p-2 border rounded" placeholder="×©× ×‘×¢×‘×¨×™×ª" />
