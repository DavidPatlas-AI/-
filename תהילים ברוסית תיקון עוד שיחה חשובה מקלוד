const CorrectionResults: React.FC = () => {
  const [result, setResult] = useState<CorrectionResult>(sampleResult);
  const [currentStyle, setCurrentStyle] = useState<string>(sampleResult.style);
  const [showOriginal, setShowOriginal] = useState<boolean>(false);
  const [showExplanation, setShowExplanation] = useState<boolean>(true);
  const [notificationMessage, setNotificationMessage] = useState<string | null>(null);
  
  // ×”×—×œ×¤×ª ×¡×’× ×•×Ÿ ×”×ª×™×§×•×Ÿ
  const changeStyle = (style: string) => {
    // ×‘××™××•×© ×××™×ª×™, ×›××Ÿ ×”×™×™× ×• ××¤×¢×™×œ×™× ××ª ×× ×’× ×•×Ÿ ×”×ª×™×§×•×Ÿ ××—×“×© ×¢× ×”×¡×’× ×•×Ÿ ×”×—×“×©
    setCurrentStyle(style);
    
    // ×œ×¦×•×¨×š ×”×“×’××”, × ×©× ×” ×¨×§ ××ª ×©× ×”×¡×’× ×•×Ÿ
    setResult(prev => ({
      ...prev,
      style: style
    }));
    
    showNotification('Ğ¡Ñ‚Ğ¸Ğ»ÑŒ Ğ¸ÑĞ¿Ñ€Ğ°Ğ²Ğ»ĞµĞ½Ğ¸Ñ Ğ¸Ğ·Ğ¼ĞµĞ½ĞµĞ½');
  };
  
  // ×”×¦×’×ª ×”×ª×¨××”
  const showNotification = (message: string) => {
    setNotificationMessage(message);
    setTimeout(() => {
      setNotificationMessage(null);
    }, 3000);
  };
  
  // ×”×¢×ª×§×ª ×”×˜×§×¡×˜ ×”××ª×•×§×Ÿ ×œ×œ×•×—
  const copyToClipboard = () => {
    navigator.clipboard.writeText(result.correctedText)
      .then(() => {
        showNotification('Ğ¢ĞµĞºÑÑ‚ ÑĞºĞ¾Ğ¿Ğ¸Ñ€Ğ¾Ğ²Ğ°Ğ½ Ğ² Ğ±ÑƒÑ„ĞµÑ€ Ğ¾Ğ±Ğ¼ĞµĞ½Ğ°');
      })
      .catch(err => {
        console.error('Failed to copy: ', err);
        showNotification('ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ ĞºĞ¾Ğ¿Ğ¸Ñ€Ğ¾Ğ²Ğ°Ğ½Ğ¸Ğ¸');
      });
  };
  
  // ×©××™×¨×ª ×”×ª×™×§×•×Ÿ ×œ×”×™×¡×˜×•×¨×™×”
  const saveCorrection = () => {
    // ×‘××™××•×© ×××™×ª×™, ×›××Ÿ ×”×™×™× ×• ×©×•××¨×™× ××ª ×”×ª×™×§×•×Ÿ
    showNotification('Ğ˜ÑĞ¿Ñ€Ğ°Ğ²Ğ»ĞµĞ½Ğ¸Ğµ ÑĞ¾Ñ…Ñ€Ğ°Ğ½ĞµĞ½Ğ¾');
  };
  
  // ×”×•×¨×“×ª ×”×˜×§×¡×˜ ×”××ª×•×§×Ÿ ×›×§×•×‘×¥ ×˜×§×¡×˜
  const downloadText = () => {
    const element = document.createElement('a');
    const file = new Blob([result.correctedText], {type: 'text/plain'});
    element.href = URL.createObjectURL(file);
    element.download = `corrected-text-${new Date().toISOString().slice(0,10)}.txt`;
    document.body.appendChild(element);
    element.click();
    document.body.removeChild(element);
    
    showNotification('Ğ¤Ğ°Ğ¹Ğ» Ğ·Ğ°Ğ³Ñ€ÑƒĞ¶ĞµĞ½');
  };
  
  // ×¤×•×¨××˜ ×ª××¨×™×š
  const formatDate = (dateString: string): string => {
    const date = new Date(dateString);
    return new Intl.DateTimeFormat('ru-RU', {
      day: 'numeric',
      month: 'long',
      year: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    }).format(date);
  };
  
  // ××™×œ×•×Ÿ ×§×˜×’×•×¨×™×•×ª ×‘×©×¤×” ×”×¨×•×¡×™×ª
  const categoryNames: {[key: string]: string} = {
    divine: 'Ğ‘-Ğ³ (Ğ¸ Ğ¿Ğ°Ğ´ĞµĞ¶Ğ¸)',
    lord: 'Ğ“-ÑĞ¿Ğ¾Ğ´ÑŒ (Ğ¸ Ğ¿Ğ°Ğ´ĞµĞ¶Ğ¸)',
    most_high: 'Ğ’Ñ-Ğ²Ñ‹ÑˆĞ½Ğ¸Ğ¹ (Ğ¸ Ğ¿Ğ°Ğ´ĞµĞ¶Ğ¸)',
    creator: 'Ğ¢Ğ²-Ñ€ĞµÑ† (Ğ¸ Ğ¿Ğ°Ğ´ĞµĞ¶Ğ¸)',
    tetragrammaton: 'Ğ¢ĞµÑ‚Ñ€Ğ°Ğ³Ñ€Ğ°Ğ¼Ğ¼Ğ°Ñ‚Ğ¾Ğ½',
    other: 'Ğ”Ñ€ÑƒĞ³Ğ¸Ğµ Ğ¸Ğ¼ĞµĞ½Ğ°'
  };
  
  return (
    <div className="min-h-screen bg-gray-50 p-4">
      <div className="max-w-4xl mx-auto">
        {/* ×›×•×ª×¨×ª */}
        <div className="bg-white p-4 rounded-lg shadow-sm flex items-center gap-3 mb-4">
          <a href="correct-text.html" className="text-gray-500 hover:text-gray-700">
            <ArrowLeft size={20} />
          </a>
          <h1 className="text-xl font-bold">Ğ ĞµĞ·ÑƒĞ»ÑŒÑ‚Ğ°Ñ‚Ñ‹ Ğ¸ÑĞ¿Ñ€Ğ°Ğ²Ğ»ĞµĞ½Ğ¸Ñ</h1>
        </div>
        
        {/* ×¡×˜×˜×™×¡×˜×™×§×” */}
        <div className="bg-white rounded-lg shadow-sm p-4 mb-4">
          <h2 className="text-lg font-bold mb-3">Ğ¡Ñ‚Ğ°Ñ‚Ğ¸ÑÑ‚Ğ¸ĞºĞ° Ğ¸ÑĞ¿Ñ€Ğ°Ğ²Ğ»ĞµĞ½Ğ¸Ğ¹</h2>
          
          <div className="grid grid-cols-3 gap-4 mb-4">
            <div className="bg-blue-50 p-3 rounded-lg text-center">
              <div className="text-2xl font-bold text-blue-600">{result.stats.total}</div>
              <div className="text-sm text-gray-600">Ğ’ÑĞµĞ³Ğ¾ Ğ¸ÑĞ¿Ñ€Ğ°Ğ²Ğ»ĞµĞ½Ğ¸Ğ¹</div>
            </div>
            <div className="bg-blue-50 p-3 rounded-lg text-center">
              <div className="text-2xl font-bold text-blue-600">{Object.keys(result.stats.categories).length}</div>
              <div className="text-sm text-gray-600">Ğ¢Ğ¸Ğ¿Ğ¾Ğ² Ğ¸Ğ¼Ñ‘Ğ½</div>
            </div>
            <div className="bg-blue-50 p-3 rounded-lg text-center">
              <div className="text-2xl font-bold text-blue-600">{result.originalText.split(' ').length}</div>
              <div className="text-sm text-gray-600">Ğ’ÑĞµĞ³Ğ¾ ÑĞ»Ğ¾Ğ²</div>
            </div>
          </div>
          
          <div className="mb-4">
            <h3 className="font-medium mb-2">ĞŸĞ¾ ĞºĞ°Ñ‚ĞµĞ³Ğ¾Ñ€Ğ¸ÑĞ¼:</h3>
            <div className="grid grid-cols-2 gap-2">
              {Object.entries(result.stats.categories)
                .filter(([_, count]) => count > 0)
                .map(([category, count]) => (
                  <div key={category} className="flex justify-between items-center bg-gray-50 p-2 rounded">
                    <span>{categoryNames[category]}</span>
                    <span className="font-bold text-blue-600">{count}</span>
                  </div>
                ))}
            </div>
          </div>
        </div>
        
        {/* ××¤×©×¨×•×™×•×ª ×ª×™×§×•×Ÿ */}
        <div className="bg-white rounded-lg shadow-sm p-4 mb-4">
          <h2 className="text-lg font-bold mb-3">Ğ¡Ñ‚Ğ¸Ğ»ÑŒ Ğ¸ÑĞ¿Ñ€Ğ°Ğ²Ğ»ĞµĞ½Ğ¸Ñ</h2>
          
          <div className="grid grid-cols-2 md:grid-cols-3 gap-2 mb-4">
            {correctionStyles.map(style => (
              <button
                key={style.id}
                className={`p-3 border rounded-lg text-center ${currentStyle === style.id ? 'border-blue-500 bg-blue-50' : 'border-gray-200'}`}
                onClick={() => changeStyle(style.id)}
              >
                <div className="font-medium">{style.name}</div>
                <div className="text-sm text-gray-500">ĞŸÑ€Ğ¸Ğ¼ĞµÑ€: {style.example}</div>
              </button>
            ))}
          </div>
          
          <div className="flex justify-end">
            <button 
              className="flex items-center gap-1 text-blue-600 text-sm"
              onClick={() => setShowExplanation(!showExplanation)}
            >
              {showExplanation ? (
                <>Ğ¡ĞºÑ€Ñ‹Ñ‚ÑŒ Ğ¾Ğ±ÑŠÑÑĞ½ĞµĞ½Ğ¸Ğµ <ChevronUp size={16} /></>
              ) : (
                <>ĞŸĞ¾ĞºĞ°Ğ·Ğ°Ñ‚ÑŒ Ğ¾Ğ±ÑŠÑÑĞ½ĞµĞ½Ğ¸Ğµ <ChevronDown size={16} /></>
              )}
            </button>
          </div>
          
          {showExplanation && (
            <div className="mt-2 p-3 bg-blue-50 text-sm rounded-lg">
              <p className="mb-2">
                <strong>ĞŸĞ¾Ñ‡ĞµĞ¼Ñƒ Ğ²Ğ°Ğ¶Ğ½Ğ¾ Ğ¸ÑĞ¿Ñ€Ğ°Ğ²Ğ»ÑÑ‚ÑŒ Ğ¸Ğ¼ĞµĞ½Ğ° Ğ’ÑĞµĞ²Ñ‹ÑˆĞ½ĞµĞ³Ğ¾:</strong> Ğ’ ĞµĞ²Ñ€ĞµĞ¹ÑĞºĞ¾Ğ¹ Ñ‚Ñ€Ğ°Ğ´Ğ¸Ñ†Ğ¸Ğ¸ Ğ¸Ğ¼ĞµĞ½Ğ° Ğ’ÑĞµĞ²Ñ‹ÑˆĞ½ĞµĞ³Ğ¾ Ğ¾Ğ±Ğ»Ğ°Ğ´Ğ°ÑÑ‚ ÑĞ²ÑÑ‚Ğ¾ÑÑ‚ÑŒÑ Ğ¸ Ğ´Ğ¾Ğ»Ğ¶Ğ½Ñ‹ Ğ¸ÑĞ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ñ‚ÑŒÑÑ Ñ ÑƒĞ²Ğ°Ğ¶ĞµĞ½Ğ¸ĞµĞ¼. Ğ’ Ñ‚ĞµĞºÑÑ‚Ğ°Ñ…, ĞºĞ¾Ñ‚Ğ¾Ñ€Ñ‹Ğµ Ğ¼Ğ¾Ğ³ÑƒÑ‚ Ğ±Ñ‹Ñ‚ÑŒ Ğ½Ğ°Ğ¿ĞµÑ‡Ğ°Ñ‚Ğ°Ğ½Ñ‹ Ğ¸Ğ»Ğ¸ Ğ¿Ğ¾ĞºĞ°Ğ·Ğ°Ğ½Ñ‹ Ğ½Ğ° ÑĞºÑ€Ğ°Ğ½Ğµ, Ğ¿Ñ€Ğ¸Ğ½ÑÑ‚Ğ¾ Ğ·Ğ°Ğ¼ĞµĞ½ÑÑ‚ÑŒ ÑÑ‚Ğ¸ Ğ¸Ğ¼ĞµĞ½Ğ° ÑĞ¿ĞµÑ†Ğ¸Ğ°Ğ»ÑŒĞ½Ñ‹Ğ¼Ğ¸ Ñ„Ğ¾Ñ€Ğ¼Ğ°Ğ¼Ğ¸, Ñ‡Ñ‚Ğ¾Ğ±Ñ‹ Ğ¸Ğ·Ğ±ĞµĞ¶Ğ°Ñ‚ÑŒ Ğ¸Ñ… ÑÑ‚Ğ¸Ñ€Ğ°Ğ½Ğ¸Ñ Ğ¸Ğ»Ğ¸ Ğ½ĞµÑƒĞ²Ğ°Ğ¶Ğ¸Ñ‚ĞµĞ»ÑŒĞ½Ğ¾Ğ³Ğ¾ Ğ¾Ğ±Ñ€Ğ°Ñ‰ĞµĞ½Ğ¸Ñ.
