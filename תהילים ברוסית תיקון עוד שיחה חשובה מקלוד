  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // ĞĞ°Ñ‡Ğ°Ğ»ÑŒĞ½Ñ‹Ğµ Ğ·Ğ½Ğ°Ñ‡ĞµĞ½Ğ¸Ñ
      let currentPsalm = 1;
      const totalPsalms = 150;
      
      // Ğ˜Ğ²Ñ€Ğ¸Ñ‚ÑĞºĞ¸Ğµ Ñ‡Ğ¸ÑĞ»Ğ° Ğ´Ğ»Ñ Ğ¿ĞµÑ€Ğ²Ñ‹Ñ… 10 Ğ¿ÑĞ°Ğ»Ğ¼Ğ¾Ğ²
      const hebrewNumbers = ['×', '×‘', '×’', '×“', '×”', '×•', '×–', '×—', '×˜', '×™', '×™×´×', '×™×´×‘', '×™×´×’', '×™×´×“', '×˜×´×•'];
      
      // ĞĞ±Ñ€Ğ°Ğ±Ğ¾Ñ‚Ñ‡Ğ¸ĞºĞ¸ Ğ½Ğ°Ğ²Ğ¸Ğ³Ğ°Ñ†Ğ¸Ğ¸
      const prevBtn = document.getElementById('prev-psalm');
      const nextBtn = document.getElementById('next-psalm');
      const selectBtn = document.getElementById('select-psalm');
      const currentPsalmSpan = document.getElementById('current-psalm');
      const currentPsalmHebrewSpan = document.getElementById('current-psalm-hebrew');
      
      // ĞĞ±Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ¸Ğµ Ğ¿ÑĞ°Ğ»Ğ¼Ğ°
      function updatePsalm() {
        currentPsalmSpan.textContent = currentPsalm;
        currentPsalmHebrewSpan.textContent = currentPsalm <= hebrewNumbers.length ? hebrewNumbers[currentPsalm - 1] : currentPsalm;
        
        document.querySelector('.psalm-title').textContent = `ĞŸÑĞ°Ğ»Ğ¾Ğ¼ ${currentPsalm} - ××–××•×¨ ${currentPsalm <= hebrewNumbers.length ? hebrewNumbers[currentPsalm - 1] : currentPsalm}`;
        
        // ĞĞ±Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ¸Ğµ ÑĞ¾ÑÑ‚Ğ¾ÑĞ½Ğ¸Ñ ĞºĞ½Ğ¾Ğ¿Ğ¾Ğº
        prevBtn.disabled = currentPsalm <= 1;
        nextBtn.disabled = currentPsalm >= totalPsalms;
        
        // Ğ’ Ñ€ĞµĞ°Ğ»ÑŒĞ½Ğ¾Ğ¼ Ğ¿Ñ€Ğ¾ĞµĞºÑ‚Ğµ Ğ·Ğ´ĞµÑÑŒ Ğ±ÑƒĞ´ĞµÑ‚ Ğ·Ğ°Ğ³Ñ€ÑƒĞ·ĞºĞ° ÑĞ¾Ğ´ĞµÑ€Ğ¶Ğ¸Ğ¼Ğ¾Ğ³Ğ¾ Ğ¿ÑĞ°Ğ»Ğ¼Ğ°
        // loadPsalmContent(currentPsalm);
      }
      
      // ĞŸĞµÑ€ĞµÑ…Ğ¾Ğ´ Ğº Ğ¿Ñ€ĞµĞ´Ñ‹Ğ´ÑƒÑ‰ĞµĞ¼Ñƒ Ğ¿ÑĞ°Ğ»Ğ¼Ñƒ
      prevBtn.addEventListener('click', function() {
        if (currentPsalm > 1) {
          currentPsalm--;
          updatePsalm();
        }
      });
      
      // ĞŸĞµÑ€ĞµÑ…Ğ¾Ğ´ Ğº ÑĞ»ĞµĞ´ÑƒÑÑ‰ĞµĞ¼Ñƒ Ğ¿ÑĞ°Ğ»Ğ¼Ñƒ
      nextBtn.addEventListener('click', function() {
        if (currentPsalm < totalPsalms) {
          currentPsalm++;
          updatePsalm();
        }
      });
      
      // Ğ’Ñ‹Ğ±Ğ¾Ñ€ Ğ¿ÑĞ°Ğ»Ğ¼Ğ°
      selectBtn.addEventListener('click', function() {
        const psalmNumber = prompt(`Ğ’Ñ‹Ğ±ĞµÑ€Ğ¸Ñ‚Ğµ Ğ¿ÑĞ°Ğ»Ğ¾Ğ¼ (1-${totalPsalms}):`, currentPsalm);
        
        if (psalmNumber !== null) {
          const num = parseInt(psalmNumber);
          
          if (!isNaN(num) && num >= 1 && num <= totalPsalms) {
            currentPsalm = num;
            updatePsalm();
          } else {
            alert(`ĞŸĞ¾Ğ¶Ğ°Ğ»ÑƒĞ¹ÑÑ‚Ğ°, Ğ²Ğ²ĞµĞ´Ğ¸Ñ‚Ğµ Ñ‡Ğ¸ÑĞ»Ğ¾ Ğ¾Ñ‚ 1 Ğ´Ğ¾ ${totalPsalms}.`);
          }
        }
      });
      
      // ĞŸĞµÑ€ĞµĞºĞ»ÑÑ‡ĞµĞ½Ğ¸Ğµ Ñ‚ĞµĞ¼Ñ‹
      const themeToggleBtn = document.getElementById('toggle-theme');
      
      themeToggleBtn.addEventListener('click', function() {
        document.body.classList.toggle('dark-mode');
        themeToggleBtn.textContent = document.body.classList.contains('dark-mode') ? 'â˜€ï¸' : 'ğŸŒ™';
      });
      
      // Ğ ĞµĞ¶Ğ¸Ğ¼ Ñ‡Ñ‚ĞµĞ½Ğ¸Ñ
      const readingModeBtn = document.getElementById('toggle-reading-mode');
      const exitReadingModeBtn = document.getElementById('exit-reading-mode');
      
      readingModeBtn.addEventListener('click', function() {
        document.body.classList.add('reading-mode');
