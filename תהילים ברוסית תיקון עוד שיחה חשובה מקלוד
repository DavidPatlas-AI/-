                <li><strong>Ğ¡ Ğ´ĞµÑ„Ğ¸ÑĞ¾Ğ¼ (Ğ‘-Ğ³)</strong>: ĞšĞ»Ğ°ÑÑĞ¸Ñ‡ĞµÑĞºĞ¸Ğ¹ Ğ¼ĞµÑ‚Ğ¾Ğ´, Ğ¿Ñ€Ğ¸ ĞºĞ¾Ñ‚Ğ¾Ñ€Ğ¾Ğ¼ Ğ¾Ğ´Ğ½Ğ° Ğ±ÑƒĞºĞ²Ğ° Ğ·Ğ°Ğ¼ĞµĞ½ÑĞµÑ‚ÑÑ Ğ´ĞµÑ„Ğ¸ÑĞ¾Ğ¼.</li>
                <li><strong>Ğ˜Ğ²Ñ€Ğ¸Ñ‚ (×”')</strong>: Ğ—Ğ°Ğ¼ĞµĞ½Ğ° Ğ½Ğ° ÑĞ¾Ğ¾Ñ‚Ğ²ĞµÑ‚ÑÑ‚Ğ²ÑƒÑÑ‰ĞµĞµ Ğ¸Ğ¼Ñ Ğ½Ğ° Ğ¸Ğ²Ñ€Ğ¸Ñ‚Ğµ.</li>
                <li><strong>Ğ¡Ğ»Ğ¾Ğ²Ğ¾Ğ¼ (Ğ’Ñ-Ğ²Ñ‹ÑˆĞ½Ğ¸Ğ¹)</strong>: Ğ˜ÑĞ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ğ½Ğ¸Ğµ Ğ°Ğ»ÑŒÑ‚ĞµÑ€Ğ½Ğ°Ñ‚Ğ¸Ğ²Ğ½Ñ‹Ñ… Ğ½Ğ°Ğ·Ğ²Ğ°Ğ½Ğ¸Ğ¹.</li>
                <li><strong>Ğ’ ÑĞºĞ¾Ğ±ĞºĞ°Ñ… (Ğ‘[Ğ¾]Ğ³)</strong>: ĞŸĞ¾Ğ¼ĞµÑ‰ĞµĞ½Ğ¸Ğµ Ğ¾Ğ´Ğ½Ğ¾Ğ¹ Ğ±ÑƒĞºĞ²Ñ‹ Ğ² ÑĞºĞ¾Ğ±ĞºĞ¸.</li>
                <li><strong>Ğ¢Ñ€Ğ°Ğ½ÑĞ»Ğ¸Ñ‚ĞµÑ€Ğ°Ñ†Ğ¸Ñ (ĞÑˆĞµĞ¼)</strong>: Ğ˜ÑĞ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ğ½Ğ¸Ğµ Ñ‚Ñ€Ğ°Ğ½ÑĞ»Ğ¸Ñ‚ĞµÑ€Ğ°Ñ†Ğ¸Ğ¸ ÑĞ»Ğ¾Ğ²Ğ° "Ğ˜Ğ¼Ñ" (Ñ…Ğ°-Ğ¨ĞµĞ¼).</li>
              </ul>
            </div>
          )}
        </div>
        
        {/* ×˜×§×¡×˜ ××ª×•×§×Ÿ */}
        <div className="bg-white rounded-lg shadow-sm p-4 mb-4">
          <div className="flex justify-between items-center mb-3">
            <h2 className="text-lg font-bold">Ğ˜ÑĞ¿Ñ€Ğ°Ğ²Ğ»ĞµĞ½Ğ½Ñ‹Ğ¹ Ñ‚ĞµĞºÑÑ‚</h2>
            <button
              className="flex items-center gap-1 text-blue-600 text-sm"
              onClick={() => setShowOriginal(!showOriginal)}
            >
              {showOriginal ? (
                <>Ğ¡ĞºÑ€Ñ‹Ñ‚ÑŒ Ğ¾Ñ€Ğ¸Ğ³Ğ¸Ğ½Ğ°Ğ» <ChevronUp size={16} /></>
              ) : (
                <>ĞŸĞ¾ĞºĞ°Ğ·Ğ°Ñ‚ÑŒ Ğ¾Ñ€Ğ¸Ğ³Ğ¸Ğ½Ğ°Ğ» <ChevronDown size={16} /></>
              )}
            </button>
          </div>
          
          {showOriginal && (
            <div className="p-3 border border-gray-200 rounded-lg mb-3 text-gray-700">
              <div className="text-sm font-medium mb-1">Ğ˜ÑÑ…Ğ¾Ğ´Ğ½Ñ‹Ğ¹ Ñ‚ĞµĞºÑÑ‚:</div>
              <div>{result.originalText}</div>
            </div>
          )}
          
          <div className="p-3 bg-blue-50 rounded-lg mb-3">
            <div dangerouslySetInnerHTML={{ 
              __html: result.htmlResult.replace(
                /<span class="highlight">(.*?)<\/span>/g, 
                '<span style="background-color: #fff3cd; padding: 0 2px; border-radius: 2px;">$1</span>'
              ) 
            }} />
          </div>
          
          <div className="flex flex-wrap gap-2">
            <button 
              className="flex items-center gap-1 px-3 py-2 bg-blue-600 text-white rounded-lg"
              onClick={copyToClipboard}
            >
              <Copy size={16} /> ĞšĞ¾Ğ¿Ğ¸Ñ€Ğ¾Ğ²Ğ°Ñ‚ÑŒ
            </button>
            <button 
              className="flex items-center gap-1 px-3 py-2 bg-gray-600 text-white rounded-lg"
              onClick={downloadText}
            >
              <Download size={16} /> Ğ¡ĞºĞ°Ñ‡Ğ°Ñ‚ÑŒ
            </button>
            <button 
              className="flex items-center gap-1 px-3 py-2 bg-blue-600 text-white rounded-lg"
              onClick={saveCorrection}
            >
              <Save size={16} /> Ğ¡Ğ¾Ñ…Ñ€Ğ°Ğ½Ğ¸Ñ‚ÑŒ
            </button>
            <button 
              className="flex items-center gap-1 px-3 py-2 bg-gray-600 text-white rounded-lg"
            >
              <Printer size={16} /> ĞŸĞµÑ‡Ğ°Ñ‚ÑŒ
            </button>
            <button 
              className="flex items-center gap-1 px-3 py-2 bg-green-600 text-white rounded-lg"
            >
              <Share2 size={16} /> ĞŸĞ¾Ğ´ĞµĞ»Ğ¸Ñ‚ÑŒÑÑ
            </button>
          </div>
        </div>
        
        {/* ×”×›×¨×˜×™×¡×™×™×” ×©×œ×š */}
        <div className="bg-white rounded-lg shadow-sm p-4 mb-4">
          <h2 className="text-lg font-bold mb-3">Ğ’Ğ°ÑˆĞ° ĞºĞ°Ñ€Ñ‚Ğ¾Ñ‡ĞºĞ°</h2>
          
          <div className="flex gap-3">
            <div className="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center text-blue-600">
              <FileText size={20} />
            </div>
            <div className="flex-1">
              <div className="flex justify-between items-center mb-1">
                <div className="font-bold">Ğ¢ĞµĞºÑÑ‚ Ğ¼Ğ¾Ğ»Ğ¸Ñ‚Ğ²Ñ‹ (ĞšĞ¸Ğ´ÑƒÑˆ)</div>
                <div className="text-sm text-gray-500">{formatDate(result.timestamp)}</div>
              </div>
              <div className="text-sm text-gray-600 mb-2">
                Ğ˜ÑĞ¿Ñ€Ğ°Ğ²Ğ»ĞµĞ½Ğ¾ Ğ¸Ğ¼ĞµĞ½: {result.stats.total} â€¢ Ğ¡Ñ‚Ğ¸Ğ»ÑŒ: {correctionStyles.find(s => s.id === result.style)?.name || result.style}
              </div>
              <div className="flex gap-2">
                <button className="px-3 py-1 text-sm border border-gray-200 rounded-lg hover:bg-gray-50">
                  Ğ ĞµĞ´Ğ°ĞºÑ‚Ğ¸Ñ€Ğ¾Ğ²Ğ°Ñ‚ÑŒ Ğ·Ğ°Ğ½Ğ¾Ğ²Ğ¾
                </button>
                <button className="px-3 py-1 text-sm text-blue-600 border border-blue-200 rounded-lg hover:bg-blue-50">
                  Ğ’ Ğ¸Ğ·Ğ±Ñ€Ğ°Ğ½Ğ½Ğ¾Ğµ
                </button>
              </div>
            </div>
          </div>
        </div>
        
        {/* ×›×¤×ª×•×¨×™ ×¤×¢×•×œ×” × ×•×¡×¤×™× */}
        <div className="flex flex-wrap gap-2 justify-center">
          <a href="correct-text.html" className="flex items-center gap-1 px-4 py-2 border border-gray-300 rounded-lg text-gray-700">
            <RotateCcw size={16} /> Ğ˜ÑĞ¿Ñ€Ğ°Ğ²Ğ¸Ñ‚ÑŒ Ğ½Ğ¾Ğ²Ñ‹Ğ¹ Ñ‚ĞµĞºÑÑ‚
          </a>
          <a href="index.html" className="flex items-center gap-1 px-4 py-2 bg-blue-600 text-white rounded-lg">
            <Check size={16} /> Ğ—Ğ°Ğ²ĞµÑ€ÑˆĞ¸Ñ‚ÑŒ
          </a>
        </div>
      </div>
      
      {/* ×”×ª×¨××” */}
      {notificationMessage && (
        <div className="fixed bottom-4 right-4 left-4 bg-green-600 text-white p-3 rounded-lg shadow-lg text-center">
          {notificationMessage}
        </div>
      )}
    </div>
  );
};

export default CorrectionResults;import React, { useState, useEffect } from 'react';
import { ChevronLeft, ChevronRight, Calendar, Info, Plus, User, ArrowLeft } from 'lucide-react';

// ×˜×™×¤×•×¡×™ ××™×“×¢
type HebrewDate = {
  day: number;
  month: number;
  year: number;
  monthName: string;
}

type CalendarDay = {
  gregorianDate: Date;
  hebrewDate: HebrewDate;
  events: YahrzeitEvent[];
  isToday: boolean;
  isCurrentMonth: boolean;
}

type YahrzeitEvent = {
  id: string;
  name: {
    hebrew: string;
    russian: string;
  };
  relation: string;
  hebrewDate: HebrewDate;
  gregorianDate: Date;
  displayColor?: string;
}

type JewishHoliday = {
  id: string;
  name: {
    hebrew: string;
    russian: string;
  };
  hebrewDate: HebrewDate;
  type: 'major' | 'minor' | 'modern' | 'fast';
  description?: string;
}

// ×©××•×ª ×—×•×“×©×™× ×¢×‘×¨×™×™× ×‘×¨×•×¡×™×ª
